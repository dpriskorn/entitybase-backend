{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EntityBase Entity Response v1.0.0",
  "description": "Schema for EntityBase JSON Entity v1 API responses",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[QPL][0-9]+$",
      "description": "Entity ID (Q for items, P for properties, L for lexemes)"
    },
    "type": {
      "type": "string",
      "enum": ["item", "property", "lexeme"],
      "description": "Entity type"
    },
    "schema_version": {
      "type": "string",
      "description": "Schema version of the stored data"
    },
    "revision_id": {
      "type": "integer",
      "minimum": 1,
      "description": "Revision ID"
    },
    "modified": {
      "type": "string",
      "format": "date-time",
      "description": "Last modification timestamp"
    },
    "labels": {
      "type": "object",
      "description": "Language-keyed labels",
      "patternProperties": {
        "^[a-z-]+$": {
          "type": "object",
          "properties": {
            "language": {"type": "string"},
            "value": {"type": "string"}
          },
          "required": ["language", "value"]
        }
      }
    },
    "descriptions": {
      "type": "object",
      "description": "Language-keyed descriptions",
      "patternProperties": {
        "^[a-z-]+$": {
          "type": "object",
          "properties": {
            "language": {"type": "string"},
            "value": {"type": "string"}
          },
          "required": ["language", "value"]
        }
      }
    },
    "claims": {
      "type": "object",
      "description": "Property claims/statements"
    },
    "aliases": {
      "type": "object",
      "description": "Language-keyed aliases"
    },
    "sitelinks": {
      "type": "object",
      "description": "Site links"
    }
  },
  "required": ["id", "type"],
  "additionalProperties": false
}