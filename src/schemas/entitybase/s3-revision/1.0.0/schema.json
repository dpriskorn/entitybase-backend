{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wikibase.org/schemas/s3-revision/1.0.0.json",
  "title": "S3 Revision Snapshot",
  "description": "Immutable entity revision snapshot stored in S3",
  "type": "object",
  "required": [
    "schema_version",
    "revision_id",
    "created_at",
    "created_by",
    "entity_type",
    "entity"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version (MAJOR.MINOR.PATCH)"
    },
    "revision_id": {
      "type": "integer",
      "minimum": 0,
      "description": "Monotonically increasing revision number"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp when revision was created"
    },
    "created_by": {
      "type": "string",
      "description": "User or system that created this revision"
    },
    "entity_type": {
      "type": "string",
      "enum": ["item", "property", "lexeme"],
      "description": "Type of entity"
    },
    "content_hash": {
      "type": "integer",
      "description": "Rapidhash integer of entity data for deduplication"
    },
    "edit_type": {
      "type": "string",
      "description": "Text classification of edit type (e.g., 'bot-import', 'cleanup-2025')"
    },
    "is_semi_protected": {
      "type": "boolean",
      "default": false,
      "description": "Item is semi-protected (blocks new/unconfirmed users)"
    },
    "is_locked": {
      "type": "boolean",
      "default": false,
      "description": "Item is locked from any edits"
    },
    "is_archived": {
      "type": "boolean",
      "default": false,
      "description": "Item is archived (cannot be edited, can be excluded from exports)"
    },
    "is_dangling": {
      "type": "boolean",
      "default": false,
      "description": "Item has no maintaining WikiProject (P6104 statement) - computed by frontend"
    },
    "is_mass_edit_protected": {
      "type": "boolean",
      "default": false,
      "description": "Item is protected from mass edits (bot operations)"
    },
    "is_deleted": {
      "type": "boolean",
      "default": false,
      "description": "Whether this entity revision is deleted (soft delete tombstone)"
    },
    "is_redirect": {
      "type": "boolean",
      "default": false,
      "description": "Whether this entity is a redirect"
    },
    "entity": {
      "type": "object",
      "description": "Complete entity content snapshot",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Z]\\d+$",
          "description": "External entity identifier"
        },
        "type": {
          "type": "string",
          "description": "Entity type"
        },
        "labels": {
          "type": "object",
          "patternProperties": {
            "^[a-z-]+$": {
              "type": "object",
              "required": ["language", "value"],
              "properties": {
                "language": { "type": "string" },
                "value": { "type": "string" }
              }
            }
          }
        },
        "descriptions": {
          "type": "object",
          "patternProperties": {
            "^[a-z-]+$": {
              "type": "object",
              "required": ["language", "value"],
              "properties": {
                "language": { "type": "string" },
                "value": { "type": "string" }
              }
            }
          }
        },
        "aliases": {
          "type": "object",
          "patternProperties": {
            "^[a-z-]+$": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["language", "value"],
                "properties": {
                  "language": { "type": "string" },
                  "value": { "type": "string" }
                }
              }
            }
          }
        },
        "claims": {
          "type": "object",
          "patternProperties": {
            "^[A-Z]\\d+$": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["mainsnak", "type", "id", "rank"],
                "properties": {
                  "mainsnak": { "type": "object" },
                  "type": { "type": "string" },
                  "id": { "type": "string" },
                  "rank": { "type": "string", "enum": ["preferred", "normal", "deprecated"] },
                  "qualifiers": { "type": "object" },
                  "qualifiers-order": { "type": "array", "items": { "type": "string" } },
                  "references": { "type": "array", "items": { "type": "object" } }
                }
              }
            }
          }
        },
        "sitelinks": {
          "type": "object",
          "patternProperties": {
            "^[a-z-]+$": {
              "type": "object",
              "required": ["site", "title"],
              "properties": {
                "site": { "type": "string" },
                "title": { "type": "string" },
                "badges": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        }
      }
    }
  }
}
