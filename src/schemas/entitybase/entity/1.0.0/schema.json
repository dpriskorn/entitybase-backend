{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Wikibase Entity",
  "description": "JSON Schema for Wikibase entity objects",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[QPLENS][0-9]+$"
    },
    "type": {
      "type": "string",
      "enum": ["item", "property", "lexeme", "entityschema"]
    },
    "labels": {
      "type": "object",
      "patternProperties": {
        "^[a-z]{2,3}(-[a-z0-9]+)?$": {
          "type": "object",
          "properties": {
            "language": { "type": "string" },
            "value": { "type": "string" }
          },
          "required": ["language", "value"]
        }
      }
    },
    "descriptions": {
      "type": "object",
      "patternProperties": {
        "^[a-z]{2,3}(-[a-z0-9]+)?$": {
          "type": "object",
          "properties": {
            "language": { "type": "string" },
            "value": { "type": "string" }
          },
          "required": ["language", "value"]
        }
      }
    },
    "aliases": {
      "type": "object",
      "patternProperties": {
        "^[a-z]{2,3}(-[a-z0-9]+)?$": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "language": { "type": "string" },
              "value": { "type": "string" }
            },
            "required": ["language", "value"]
          }
        }
      }
    },
    "claims": {
      "type": "object",
      "patternProperties": {
        "^P[0-9]+$": {
          "type": "array",
          "items": { "$ref": "#/$defs/statement" }
        }
      }
    },
    "sitelinks": {
      "type": "object",
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "object",
          "properties": {
            "site": { "type": "string" },
            "title": { "type": "string" },
            "badges": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "required": ["site", "title"]
        }
      }
    }
  },
  "required": ["id", "type"],
  "$defs": {
    "statement": {
      "type": "object",
      "properties": {
        "mainsnak": { "$ref": "#/$defs/snak" },
        "qualifiers": {
          "type": "object",
          "patternProperties": {
            "^P[0-9]+$": {
              "type": "array",
              "items": { "$ref": "#/$defs/snak" }
            }
          }
        },
        "qualifiers-order": {
          "type": "array",
          "items": { "type": "string", "pattern": "^P[0-9]+$" }
        },
        "references": {
          "type": "array",
          "items": { "$ref": "#/$defs/reference" }
        },
        "rank": {
          "type": "string",
          "enum": ["preferred", "normal", "deprecated"]
        },
        "id": { "type": "string" },
        "type": { "type": "string", "const": "statement" }
      },
      "required": ["mainsnak", "type", "rank"]
    },
    "snak": {
      "type": "object",
      "properties": {
        "snaktype": {
          "type": "string",
          "enum": ["value", "somevalue", "novalue"]
        },
        "property": { "type": "string", "pattern": "^P[0-9]+$" },
        "hash": { "type": "string" },
        "datavalue": { "$ref": "#/$defs/datavalue" },
        "datatype": { "type": "string" }
      },
      "required": ["snaktype", "property"]
    },
    "datavalue": {
      "type": "object",
      "properties": {
        "value": {},
        "type": { "type": "string" }
      },
      "required": ["value", "type"]
    },
    "reference": {
      "type": "object",
      "properties": {
        "hash": { "type": "string" },
        "snaks": {
          "type": "object",
          "patternProperties": {
            "^P[0-9]+$": {
              "type": "array",
              "items": { "$ref": "#/$defs/snak" }
            }
          }
        },
        "snaks-order": {
          "type": "array",
          "items": { "type": "string", "pattern": "^P[0-9]+$" }
        }
      },
      "required": ["snaks"]
    }
  }
}